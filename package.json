    "eslint-plugin-react": "^7.0.1",
    "husky": "^0.13.3",
    "lerna": "^2.0.0-rc.4",
    "lint-staged": "^3.4.2",
    "prettier": "^1.3.1",
    "prettier-eslint": "^6.2.3"
